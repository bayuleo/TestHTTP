<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#021c1e">


    <Switch
        android:id="@+id/switch_fuzzy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Smart Alert"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/idPieChartUtama"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewUtama2"
        app:layout_constraintTop_toBottomOf="@+id/switch_fuzzy"
        tools:layout_editor_absoluteX="8dp">

    </com.github.mikephil.charting.charts.PieChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewUtama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Usage"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp"/>

            <View
                android:id="@+id/view"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Watt Usage"
                android:textColor="#004445"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewUtama2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Current"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp"/>

            <View
                android:id="@+id/view1"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Current"
                android:textColor="#004445"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonPindahHal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SENSOR 1"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"/>

